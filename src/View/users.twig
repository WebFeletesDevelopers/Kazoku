{% extends './partials/base.twig' %}

{% block body %}
    <div class="justify-content-between d-flex py-3">
        <h3 class="text-dark my-1 d-inline-block">{{"Usuarios" | trans}}</h3>
        <a class="btn kaz-azul text-light btn-sm d-sm-inline-block mt-1" role="button" href="/register">
            <i class="fas fa-plus fa-sm text-white-50" ></i> {{ "Añadir Usuario" | trans }}
        </a>
    </div>
<div class="card shadow" id="judokaCard">
    <div class="card-header py-3">
        <p class="text-primary m-0 font-weight-bold">{{ "Listado de Usuarios" | trans}}{% if class.id is not null %} - {{ class.name }}{% endif %}</p>
    </div>
    <div class="card-body">
        <div class="row">
            {% if users is not null %}
            <div class="col-md-6">
                <!-- FINDER -->
                <input id="searchJudoka" type="text" name="s" class="searchJudoka form-control" placeholder="{{"Buscar Usuario" | trans}}">

            </div>
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table dataTable my-0 tablaAlumnos">
                    <thead>
                    <tr>
                        <th class="px-0 bg-primary"></th>
                        <th class="px-0 bg-primary" ><button data-name="1" data-id="name" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Usuario" | trans}}</button></th>
                        <th class="px-0 bg-primary"> <button data-name="2" data-id="surname" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Nombre" | trans}}</button></th>
                        <th class="px-0 bg-primary"> <button data-name="3" data-id="birth" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Apellido(s)" | trans}}</button></th>
                        <th class="px-0 bg-primary"> <button data-name="4" data-id="sex" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Telefono" | trans}}</button></th>
                        <th class="px-0 bg-primary"> <button data-name="5" data-id="belt" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"email" | trans}}</button></th>
                        <!--
                        <th class="px-0 bg-primary"> <button data-name="8" data-id="info" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Información" | trans}}</button></th>
                        -->
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users  %}

                        <tr>
                            <td ></td>
                            <td class="text-center">{{user.username}}</td>
                            <td class="text-center">{{user.name}}</td>
                            <td class="text-center">{{judoka.surname}} {{ judoka.secondSurname }}</td>
                            <td class="text-center">{{user.phone}}</td>
                            <td class="text-center">{{user.email}}</td>
                            <!--
                            <td class="text-center row">
                                <a href="/" class="col-6 container-fluid btn btn-sm btn-info rounded-0 inline-block "><i class="fas fa-info"></i></a>
                                <button data-id="{{ user.id }}" id="" data-name="delete-judoka"  class="judokaBtn classes col-6 container-fluid btn btn-sm btn-danger rounded-0 inline-block "><i class="fas fa-eraser"></i></button>
                            </td>
                            -->
                        </tr>

                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th class="px-0 bg-primary"></th>
                        <th class="px-0 bg-primary" ><button data-name="1" data-id="name" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Usuario" | trans}}</button></th>
                        <th class="px-0 bg-primary"> <button data-name="2" data-id="surname" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Nombre" | trans}}</button></th>
                        <th class="px-0 bg-primary"> <button data-name="3" data-id="birth" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Apellido(s)" | trans}}</button></th>
                        <th class="px-0 bg-primary"> <button data-name="4" data-id="sex" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Telefono" | trans}}</button></th>
                        <th class="px-0 bg-primary"> <button data-name="5" data-id="belt" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"email" | trans}}</button></th>
                        <!--
                        <th class="px-0 bg-primary"> <button data-name="8" data-id="info" class="tablaBtn container-fluid rounded-0 btn btn-primary px-1 my-1 text-center">{{"Información" | trans}}</button></th>
                        -->
                    </tr>
                    </tfoot>
                </table>
                {% else %}
                    <p class="alert alert-warning container-fluid text-center">No hay resultados</p>
                {% endif %}
            </div>
