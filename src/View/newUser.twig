{% extends './partials/base.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-sm-12 text-center">
            <div class="m-1">
                <div class="row mb-3">

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col">
                                <div class="card shadow mb-3">
                                    <div class="card-header py-3">
                                        <p class="text-primary m-0 font-weight-bold">{{"Datos de usuario" | trans}}</p>
                                        <div>
                                            {% set rango = 2 %}

                                                {% if rango <= 1 %}
                                                    <div class="alert alert-success ">{{ "Sus datos no se guardarán con los del nuevo usuario" | trans }}</div>
                                                {% elseif rango == 2 %}
                                                    <div class="alert alert-danger">{{ "Sus datos se guardarán como padre/madre/tutor del nuevo usuario" | trans }}</div>
                                                {% elseif rango == 3 %}
                                                    <div class="alert alert-primary ">{{ "Sus datos de alumno se guardarán con sus datos de usuario" | trans }}</div>

                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div>
                                            <div class="form-row">
                                                <div class="col">
                                                    <div class="form-group"><label for="username"><strong>{{"Usuario" | trans}}</strong></label><input class="form-control" type="text" placeholder="Ejemplo" name="username" id="username" required></div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group"><label for="password"><strong>{{"Contraseña" | trans}}</strong></label><input class="form-control" type="text" placeholder="{{ "Contraseña"  | trans }}" name="password" id="password" required></div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group"><label for="password2"><strong>{{"Repetir" | trans}}</strong></label><input class="form-control" type="text" placeholder="{{ "Contraseña"  | trans }}" name="password2" id="password2" required></div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col">
                                                    <div class="form-group"><label for="email"><strong>{{"Correo" | trans}}</strong></label><input class="form-control" type="email" placeholder="" name="email" id="email" required></div>
                                                    {% if rango == 2 %}
                                                    <div class="alert alert-danger">{{ "Si no inserta un correo, se usará el suyo para las comunicaciones" | trans }}</div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col">
                                                    <div class="form-group"><label for="name"><strong>{{"Nombre" | trans}}</strong></label><input class="form-control" type="text" placeholder="{{ "Nombre" | trans }}" name="name" id="name" required></div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group"><label for="lastname1"><strong>{{"Apellido" | trans}} 1</strong></label><input class="form-control" type="text" placeholder="{{"1º Apellido" | trans}}" name="lastname1" id="lastname2" required></div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group"><label for="lastname2"><strong>{{"Apellido" | trans}} 2</strong></label><input class="form-control" type="text" placeholder="{{"2º Apellido" | trans}}" id="lastname2" name="lastname2"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card shadow">
                                    <div class="card-header py-3">
                                        <p class="text-primary m-0 font-weight-bold">{{"Datos de dirección" | trans}}</p>
                                    </div>
                                    <div class="card-body">
                                        <div>
                                            <div class="form-group"><label for="address"><strong>{{"Dirección" | trans}}</strong></label><input class="form-control" type="text" placeholder="{{ "Calle Falsa 123" }}" name="address" id="address" required></div>
                                            <div class="form-row">
                                                <div class="col">
                                                    <div class="form-group"><label for="city"><strong>{{"Localidad" | trans}}</strong></label><input class="form-control" type="text" placeholder="Málaga" name="city" id="city" required></div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group"><label for="province"><strong>{{"Provincia" | trans }}</strong></label><input class="form-control" type="text" placeholder="Málaga" name="province" id="province" required></div>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="col-6">
                                                    <div class="form-group"><label for="zip"><strong>{{"Código Postal" | trans }}</strong></label><input class="form-control" type="text" placeholder="" name="zip" id="zip" required></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 text-center">
            <div class="card shadow">
                <div class="card-header py-3">
                    <p class="text-primary m-0 font-weight-bold">{{"Datos de alumno" | trans}}</p>
                </div>
                <div class="card-body">
                    <div>
                        <div class="form-group"><label for="dni"><strong>{{"DNI/NIE/PASAPORTE" | trans}}</strong></label><input class="form-control" maxlength="9" type="text" placeholder="{{ "00000000X" }}" name="dni" id="dni"></div>
                        <div class="form-row">
                            <div class="col">
                                <div class="form-group"><label for="idFanjyda"><strong>{{"ID FANJYDA" | trans}}</strong></label><input class="form-control" type="text" placeholder="12345" name="idFanjyda" maxlength="5" id="idFanjyda"></div>
                            </div>
                            <div class="col">
                                <div class="form-group"><label for="birthDate"><strong>{{"Fecha de Nacimiento" | trans }}</strong></label><input class="form-control" type="date" placeholder="10/10/2010" name="birthDate" id="birthDate" required></div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-6">
                                <div class="form-group"><label for="phone"><strong>{{"Teléfono de contacto" | trans }}</strong></label><input maxlength="11" class="form-control" type="number" placeholder="912345678" name="phone" id="phone"></div>
                            </div>
                            <div class="col-6">
                                <div class="form-group"><label for="gender"><strong>{{"Categoría" | trans }}</strong></label><br>
                                    <select class="custom-select mr-sm-2" id="inlineFormCustomSelectPref" required>
                                        <option selected>{{ "Seleccione uno" | trans }}</option>
                                        <option value="male">{{"Masculino"   | trans}}</option>
                                        <option value="female">{{"Femenino"  | trans}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-12">
                                <div class="form-group"><label for="illness"><strong>{{"Información Médica" | trans }}</strong></label><br><textarea class="span6 form-control" rows="3" placeholder="{{ "Por ejemplo: Asma" | trans  }}" name="illness" id="illness" ></textarea>

                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card shadow my-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 font-weight-bold">{{"Adjuntos" | trans}}</p>
                </div>
                <div class="card-body">
                    <div>
                        <div class="form-group">
                            <label for="profilePhoto"><strong>{{"Foto de Perfil" | trans}}</strong></label><br><input type="file" name="profilePhoto" id="profilePhoto">
                        </div>
                        <div class="form-group text-center">
                            <label for="dniFront"><strong>{{"Frontal Identificación" | trans}}</strong></label><br><input type="file" name="dniFront" id="dniFront">
                            <br>
                            <label for="dniBack"><strong>{{"Reverso Identificación" | trans}}</strong></label><br><input type="file" name="dniBack" id="dniBack">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group text-center container-fluid"><button class="btn btn-primary btn-xl container-fluid ">{{"Insertar datos" | trans}}</button></div>

{% endblock %}
