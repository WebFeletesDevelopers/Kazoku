{% extends './partials/base.twig' %}

{% block body %}
    <div class="container-fluid">
        <h3 class="text-dark mb-4">{{ "Perfil" | trans}}</h3>
        <div class="row mb-3">
            <div class="col-lg-4">
                <div class="card mb-3">
                    <div class="card-body text-center shadow"><img class="rounded-circle mb-3 mt-4" src="/img/profile/{% if userId is defined %}{{ userId }}{% else%}generic{% endif %}.png" width="160" height="160" />
                        <div class="mb-3"><button class="btn btn-primary btn-sm" type="button">{{ "Cambiar Foto" | trans  }}</button></div>
                    </div>
                </div>
                    <ul class="list-group mb-3 p-1  ">
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">{{ class.name }}</h6>

                                <small class="text-muted">{{ class.schedule }}</small>
                            </div>
                            <span class="text-muted" style="">{{ class.minAge }}-{{ class.maxAge }} {{ "años" | trans }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">{{ center.name }}</h6>
                                <small class="text-muted">{{ center.direction  }}</small>
                            </div>
                            <span class="text-muted">{{ center.phone  }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">{{ "Profesor" | trans  }}</h6>

                            </div>
                            <span class="text-success">{{ class.trainer}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div class="">
                                <span class="text-success">{{ "Días" | trans}}</span>

                                <h6 class="my-0 text-center">
                                    {% if days.daySplit[4] == 1 %}{{ "Lunes" | trans }}{% endif %}
                                    {% if days.daySplit[3] == 1 %}{{ "Martes" | trans }}{% endif %}
                                    {% if days.daySplit[2] == 1 %}{{ "Miércoles" | trans }}{% endif %}
                                    {% if days.daySplit[1] == 1 %}{{ "Jueves" | trans }}{% endif %}
                                    {% if days.daySplit[0] == 1 %}{{ "Viernes" | trans }}{% endif %}
                                </h6>

                            </div>
                        </li>

                    </ul>

            </div>
            <div class="col-lg-8 order-sm-first order-md-last">
                <div class="row">
                    <div class="col">
                        <div class="card shadow mb-3">
                            <div class="card-header py-3">
                                <p class="text-primary m-0 font-weight-bold">{{ "Datos" | trans}}</p>
                            </div>
                            <div class="card-body">
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group"><label for="username"><strong>{{ "Nombre" | trans}}</strong></label><input id="mod-name" class="judoka form-control" type="text" value="{{ judoka.name }}" name="username" /></div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group"><label for="email"><strong>{{ "Fecha Nacimiento" | trans}}</strong></label><input id="mod-birthDate" class="judoka form-control" type="email" value="{{ judoka.birthDate }}" name="email" /></div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group"><label for="first_name"><strong>{{ "Apellido 1" | trans}}</strong></label><input id="mod-lastname2" class="judoka form-control" type="text" value="{{judoka.lastName1}}" name="first_name" /></div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group"><label for="last_name"><strong>{{ "Apellido 2" | trans}}</strong></label><input id="mod-lastname2" class="judoka form-control" type="text" value="{{ judoka.lastName2 }}" name="last_name" /></div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                          <div class="form-group"><label for="first_name"><strong>{{ "DNI/NIE/PASAPORTE" | trans}}</strong></label><input id="mod-dni" class="judoka form-control" type="text" value="{{judoka.dni}}" name="first_name" /></div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group"><label for="last_name"><strong>{{ "ID Fanjyda" | trans}}</strong></label><input id="mod-fanjydaId" class="judoka form-control" type="text" value="{{ judoka.fanjydaId }}" name="last_name" /></div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group"><label for="first_name"><strong>{{ "Email" | trans}}</strong></label><input id="mod-email" class="judoka form-control" type="text" value="{{judoka.email}}" name="first_name" /></div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group"><label for="first_name"><strong>{{ "Teléfono" | trans}}</strong></label><input id="mod-phone" class="judoka form-control" type="text" value="{{judoka.phone}}" name="first_name" /></div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col"><label for="illness"><strong>{{"Información Médica" | trans }}</strong></label><br><textarea class="span6 w-100 form-control" rows="3" value="" name="illness" id="illness" >{{ judoka.illness }}</textarea>
                                    </div>
                            </div>
                        </div>
                        </div>
                        {% if judoka.classId !=0 %}
                        <div class="card shadow">
                            <div class="card-header py-3">
                                <p class="text-primary m-0 font-weight-bold">{{ "Dirección" | trans}}</p>
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="form-group"><label for="address"><strong>{{ "Calle" | trans}}</strong></label><input class="form-control" type="text" placeholder="Calle de ejemplo, 23 - 3ºA" name="address" /></div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group"><label for="city"><strong>{{ "Ciudad" | trans}}</strong></label><input class="form-control" type="text" placeholder="Málaga" name="city" /></div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group"><label for="zip"><strong>{{ "Código Postal" | trans}}</strong></label><input class="form-control" type="text" placeholder="29003" name="zip" /></div>
                                        </div>
                                    </div>
                                    <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">{{ "Modificar datos" | trans }}</button></div>
                                </form>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
