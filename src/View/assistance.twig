                        <td><img src="/img/profile/{% if user.userId is defined %}{{ userId }}{% else %}generic{% endif %}.png" width="30" height="30"></td>
                        <td>{{"Nombre"}}</td>
                        <td>{{ "Apellidos" }}</td>
                        <td>
                            <label class="switch">
                                <input type="checkbox" id="{{ "codAlumno "}}" onClick="addToList(1);">
                                <span class="slider round"></span>
                            </label>
                        </td>
                    </tr>
                    {% endfor %}

                    </tbody>
                    <tfoot>
                    <tr>
                        <th></th>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Presente</th>
                    </tr>
                    </tfoot>
                </table>

                <button class="btn btn-primary" onclick="sendList()">ENVIAR</button>

                {% else %}
                <p class="alert alert-warning">No hay resultados</p>
                {% endif %}
